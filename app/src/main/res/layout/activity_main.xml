<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6E6D6D"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/addTrashButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:text="Добавить отходы"
        app:layout_constraintBottom_toTopOf="@+id/stockButton"
        app:layout_constraintDimensionRatio="10:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/stockButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="просмотреть склад"
        app:layout_constraintBottom_toTopOf="@+id/RecyclerCompButton"
        app:layout_constraintDimensionRatio="10:4"
        app:layout_constraintEnd_toEndOf="@+id/addTrashButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/addTrashButton"
        app:layout_constraintTop_toBottomOf="@+id/addTrashButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/RecyclerCompButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="вызвать службу утилизации"
        app:layout_constraintBottom_toTopOf="@+id/recButton"
        app:layout_constraintDimensionRatio="10:4"
        app:layout_constraintEnd_toEndOf="@+id/stockButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/stockButton"
        app:layout_constraintTop_toBottomOf="@+id/stockButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/recButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="рекомендации по хранению"
        app:layout_constraintBottom_toTopOf="@+id/QrCodeButton"
        app:layout_constraintDimensionRatio="10:4"
        app:layout_constraintEnd_toEndOf="@+id/RecyclerCompButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/RecyclerCompButton"
        app:layout_constraintTop_toBottomOf="@+id/RecyclerCompButton"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/QrCodeButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Сгенеррровать qr-код"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="10:4"
        app:layout_constraintEnd_toEndOf="@+id/RecyclerCompButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/RecyclerCompButton"
        app:layout_constraintTop_toBottomOf="@+id/recButton"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>